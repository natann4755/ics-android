<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_screen"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_very_big"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/UMCM_google"
        android:layout_width="@dimen/button_width_big"
        android:layout_height="@dimen/button_height_big"
        android:text="Gmail"/>

    <Button
        android:id="@+id/UMCM_facebook"
        android:layout_width="@dimen/button_width_big"
        android:layout_height="@dimen/button_height_big"
        android:layout_marginTop="30dp"
        android:text="Facebook" />

    <Button
        android:id="@+id/UMCM_mail_password"
        android:layout_width="@dimen/button_width_big"
        android:layout_height="@dimen/button_height_big"
        android:text="Email"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/UMCM_anonymous"
        android:layout_width="@dimen/button_width_big"
        android:layout_height="@dimen/button_height_big"
        android:text="Anonymous"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aaa"/>

</LinearLayout>