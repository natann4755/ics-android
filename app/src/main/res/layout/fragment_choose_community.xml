<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/padding_screen"
    android:layout_marginEnd="@dimen/padding_screen"
    android:orientation="vertical"
    tools:context=".controller.main.ui.home.ChooseCommunityFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="92" />

    <TextView
        android:id="@+id/F_ChooseCommunity_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/choose_community"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_big"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16" />

    <RelativeLayout
        android:id="@+id/F_ChooseCommunity_ButtonJewishCommunity_RL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:background="@color/marine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/jewish_community"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/F_ChooseCommunity_IconJewishCommunity_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_home_black_24dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <RelativeLayout
        android:id="@+id/F_ChooseCommunity_ButtonBlack_community_RL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:background="@color/liteBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/black_community"
            android:textColor="@color/marine"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/F_ChooseCommunity_IconBlack_community_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_home_black_24dp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <RelativeLayout
        android:id="@+id/F_ChooseCommunity_ButtonLgtb_RL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:background="@color/liteBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/lgtb"
            android:textColor="@color/marine"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/F_ChooseCommunity_IconLgtb_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_home_black_24dp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16" />

    <RelativeLayout
        android:id="@+id/F_ChooseCommunity_where_RL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="68"
        android:background="@drawable/backgrond_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:text="@string/where"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/F_ChooseCommunity_IconClose_IV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_not_open_arrow" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="210">

        <View
            android:id="@+id/F_ChooseCommunity_emptyView_V"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/F_ChooseCommunity_emptyView_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="54"
                android:background="@color/liteBlue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/ic_home_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/ic_home_black_24dp" />

                    <TextView
                        android:id="@+id/F_ChooseCommunity_Location_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        tools:text="Arlozarov, Tel-avivi, 12345, Israel"
                        android:textColor="@color/marine"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="179"
                android:background="@drawable/backgrond_shadow"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30.5dp"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="26" />

                    <TextView
                        android:id="@+id/F_ChooseCommunity_Zipcode_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Zipcode: 12345"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24">

                        <TextView
                            android:id="@+id/F_ChooseCommunity_City_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="City: Tel Aviv"
                            android:textColor="@color/marine"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/F_ChooseCommunity_CityIcon_IV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="24dp"
                            android:src="@drawable/ic_home_black_24dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25" />

                    <TextView
                        android:id="@+id/F_ChooseCommunity_Country_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Country: Israel"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="26" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="94" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:background="@color/marine"
        android:text="@string/fui_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="42" />


</LinearLayout>